<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Espera Barbearia</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #1a202c;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-gray-800 text-white rounded-2xl shadow-2xl p-6 w-full max-w-md">
        <h1 class="text-3xl font-bold text-center mb-6 text-yellow-500">
            Lista de Espera
        </h1>

        <!-- Campo de entrada para adicionar nome -->
        <div class="mb-6">
            <label for="nome" class="block text-sm font-medium text-gray-400 mb-2">
                Adicionar novo cliente:
            </label>
            <div class="flex space-x-2">
                <input
                    type="text"
                    id="nome"
                    placeholder="Nome do cliente"
                    class="flex-1 px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 transition-all duration-300"
                />
                <button
                    id="adicionarBtn"
                    class="px-4 py-2 bg-yellow-500 text-gray-900 font-semibold rounded-lg hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 transition-colors duration-300"
                >
                    Adicionar
                </button>
            </div>
        </div>

        <!-- Estatísticas da fila -->
        <div class="bg-gray-700 rounded-xl p-4 mb-6 shadow-inner">
            <div class="flex justify-between items-center mb-2">
                <span class="text-gray-400">Total na fila:</span>
                <span id="contador" class="font-bold text-yellow-500 text-2xl">0</span>
            </div>
            <div class="text-center mt-4">
                <button
                    id="chamarBtn"
                    class="w-full px-6 py-3 bg-yellow-500 text-gray-900 font-bold rounded-xl shadow-md hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 transition-colors duration-300"
                >
                    Chamar Próximo
                </button>
            </div>
        </div>

        <!-- Lista de clientes -->
        <div class="border-t border-gray-700 pt-6">
            <h2 class="text-xl font-bold text-center mb-4 text-gray-300">
                Fila de Espera
            </h2>
            <ul id="lista" class="space-y-3">
                <!-- A lista será renderizada aqui via JavaScript -->
            </ul>
        </div>

    </div>

    <script>
        const nomeInput = document.getElementById('nome');
        const adicionarBtn = document.getElementById('adicionarBtn');
        const chamarBtn = document.getElementById('chamarBtn');
        const listaUl = document.getElementById('lista');
        const contadorSpan = document.getElementById('contador');

        let fila = [];

        // Função para atualizar a lista na tela
        function atualizarLista() {
            listaUl.innerHTML = '';
            fila.forEach((nome, index) => {
                const li = document.createElement('li');
                li.className = 'bg-gray-700 text-white px-4 py-3 rounded-lg shadow-sm flex items-center';
                const rank = document.createElement('span');
                rank.className = 'bg-yellow-500 text-gray-900 rounded-full w-8 h-8 flex items-center justify-center font-bold mr-3';
                rank.textContent = index + 1;
                const nomeCliente = document.createElement('span');
                nomeCliente.textContent = nome;
                li.appendChild(rank);
                li.appendChild(nomeCliente);
                listaUl.appendChild(li);
            });
            contadorSpan.textContent = fila.length;
        }

        // Função para adicionar um novo cliente
        function adicionarCliente() {
            const nome = nomeInput.value.trim();
            if (nome) {
                fila.push(nome);
                nomeInput.value = '';
                atualizarLista();
                // Opcional: focar no input para adicionar o próximo nome
                nomeInput.focus();
            }
        }

        // Função para chamar o próximo cliente
        function chamarProximo() {
            if (fila.length > 0) {
                const proximo = fila.shift();
                alert(`Por favor, atenda o próximo cliente: ${proximo}!`);
                atualizarLista();
            } else {
                alert('A fila de espera está vazia.');
            }
        }

        // Event Listeners
        adicionarBtn.addEventListener('click', adicionarCliente);
        chamarBtn.addEventListener('click', chamarProximo);

        // Permite adicionar com a tecla "Enter"
        nomeInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                adicionarCliente();
            }
        });

        // Chamada inicial para renderizar a lista (vazia)
        atualizarLista();
    </script>
</body>
</html>
